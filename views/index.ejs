<style>
@font-face {
	font-family: 'Raleway';
	src: local('Raleway'), url(/fonts/Raleway-Regular.ttf) format('truetype');
}

body {
	margin: 0;
	font-family: Raleway;
	font-size: 25px;
}
#content {
	width:960px; margin:50px auto;
}
#title {
	text-align:center; font-size:50px;
	width:100%; height:50px;
	padding:40px 0; margin-top: 50px;
	background:#000; color:#fff
}
#fundraiser {
	width:800px; margin:50px auto;
}

#bar {
	width:800px;
	height:50px;
	overflow: hidden;
	margin: 15px 0;
	position: relative;
	border-radius: 25px;

	background:#000;
}
#bar > div {
	position: absolute;
}
#bar_background {

	width:0%; height:50px;
	overflow: hidden;

	-webkit-transition: width 2s ease-in-out;
    -moz-transition: width 2s ease-in-out;
    -ms-transition: width 2s ease-in-out;
    -o-transition: width 2s ease-in-out;
    transition: width 2s ease-in-out;

}
#bar_background > div {
	overflow: hidden;
	width:800px;
	height:100%;
}
#bar_background > div > div {
	float: left;
	background: #CC2727;
	height:100%;
}

hr {
	border: none;
	border-bottom: 2px dashed #ddd;
}

</style>

<div id="title">
	PROGRESS PLEDGE PROTOTYPE
</div>

<div id="fundraiser">
	<div id="bar">
		<div id="bar_background">
			<div>
				<div style="width:150px"></div>
				<div style="width:75px; opacity:0.8"></div>
				<div style="width:75px; opacity:0.6"></div>
				<div style="width:100px; opacity:0.4"></div>
			</div>
		</div>
	</div>
</div>

<hr>

<div id="content">
	<iframe src="/pledge" style="border:0; width:100%; height:1000px;"></iframe>
</div>

<script>
	window.onload = function(){
		document.querySelector("#bar_background").style.width = "400px";
	};
</script>